<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group67.oop.CSE213_FinalProject_Group67_HighcourtBarAssociation.CreateNewCasesAndAddDetailsViewController">

    <!-- Title -->
    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 20px;" text="Create New Case" />

    <!-- Create New Case Button -->
    <Button fx:id="createCaseButton" layoutX="20.0" layoutY="60.0" onAction="#createCaseOnAction" text="Create New Case" />

    <!-- Client Name -->
    <Label layoutX="20.0" layoutY="110.0" text="Client Name:" />
    <TextField fx:id="clientNameField" layoutX="150.0" layoutY="105.0" prefWidth="300.0" />

    <!-- Case Type -->
    <Label layoutX="20.0" layoutY="160.0" text="Case Type:" />
    <TextField fx:id="caseTypeField" layoutX="150.0" layoutY="155.0" prefWidth="300.0" />

    <!-- Case Description -->
    <Label layoutX="20.0" layoutY="210.0" text="Case Description:" />
    <TextArea fx:id="caseDescriptionArea" layoutX="150.0" layoutY="205.0" prefHeight="100.0" prefWidth="500.0" />

    <!-- Upload Document -->
    <Label layoutX="20.0" layoutY="320.0" text="Upload Documents:" />
    <Button fx:id="uploadButton" layoutX="150.0" layoutY="315.0" onAction="#uploadOnAction" text="Upload File" />

    <!-- Submit Case -->
    <Button fx:id="submitCaseButton" layoutX="20.0" layoutY="370.0" onAction="#submitCaseOnAction" text="Submit Case" />

    <!-- Download Documents -->
    <Button fx:id="downloadDocsButton" layoutX="150.0" layoutY="370.0" onAction="#downloadDocsOnAction" text="Download Documents File" />

    <!-- Return Home & Logout -->
    <Button fx:id="returnHomeButton" layoutX="573.0" layoutY="20.0" onAction="#returnHomeOnAction" text="Return Home" />
    <Button fx:id="logoutButton" layoutX="700.0" layoutY="20.0" onAction="#logoutOnAction" text="Log Out" />

</AnchorPane>
