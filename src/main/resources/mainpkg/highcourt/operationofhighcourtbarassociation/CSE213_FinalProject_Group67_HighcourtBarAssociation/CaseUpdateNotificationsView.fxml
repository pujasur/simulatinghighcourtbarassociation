<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600" prefWidth="850" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group67.oop.CSE213_FinalProject_Group67_HighcourtBarAssociation.CaseUpdateNotificationsViewController">

    <!-- Title -->
    <Label layoutX="216.0" layoutY="23.0" text="Case Update Notifications">
        <font>
            <Font name="Arial Bold" size="24" />
        </font>
    </Label>

    <!-- Notifications List -->
    <Label layoutX="50" layoutY="80" text="Notifications:" />
    <ListView fx:id="notificationsListView" layoutX="50" layoutY="110" onMouseClicked="#notificationClicked" prefHeight="250" prefWidth="750" />

    <!-- Notification Details Area -->
    <Label layoutX="50" layoutY="380" text="Details:" />
    <TextArea fx:id="notificationDetailsArea" editable="false" layoutX="50" layoutY="410" prefHeight="80" prefWidth="750" wrapText="true" />

    <!-- Return Home and Logout Buttons -->
    <Button fx:id="returnHomeButton" layoutX="590.0" layoutY="21.0" onAction="#returnHomeOnAction" prefHeight="31.0" prefWidth="115.0" text="Return Home" />
    <Button fx:id="logoutButton" layoutX="737.0" layoutY="21.0" onAction="#logoutOnAction" prefHeight="31.0" prefWidth="98.0" text="Log Out" />

</AnchorPane>
