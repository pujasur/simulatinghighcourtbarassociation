<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group67.oop.CSE213_FinalProject_Group67_HighcourtBarAssociation.ScheduleMeetingsOrHearingsViewController">

    <!-- Title -->
    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 20px;" text="Schedule Meeting / Hearing" />

    <!-- Schedule Button (Navigation Trigger) -->
    <Button fx:id="scheduleButton" layoutX="20.0" layoutY="60.0" onAction="#scheduleOnAction" text="Schedule Hearing/Meeting" />

    <!-- Select Case -->
    <Label layoutX="20.0" layoutY="110.0" text="Select Case:" />
    <ComboBox fx:id="caseSelector" layoutX="150.0" layoutY="105.0" prefWidth="300.0" />

    <!-- Select Date -->
    <Label layoutX="20.0" layoutY="160.0" text="Select Date:" />
    <DatePicker fx:id="datePicker" layoutX="150.0" layoutY="155.0" />

    <!-- Select Time -->
    <Label layoutX="20.0" layoutY="210.0" text="Select Time:" />
    <TextField fx:id="timeField" layoutX="150.0" layoutY="205.0" prefWidth="150.0" promptText="e.g. 10:00 AM" />

    <!-- Participants -->
    <Label layoutX="20.0" layoutY="260.0" text="Select Participants:" />
    <ComboBox fx:id="participantSelector" layoutX="150.0" layoutY="255.0" prefWidth="300.0" promptText="Select Client or Judge" />

    <!-- Send Notification -->
    <Button fx:id="sendNotificationButton" layoutX="20.0" layoutY="310.0" onAction="#sendNotificationOnAction" text="Send Notification" />

    <!-- Return & Logout -->
    <Button fx:id="returnHomeButton" layoutX="569.0" layoutY="20.0" onAction="#returnHomeOnAction" text="Return Home" />
    <Button fx:id="logoutButton" layoutX="700.0" layoutY="20.0" onAction="#logoutOnAction" text="Log Out" />

</AnchorPane>
