<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group67.oop.CSE213_FinalProject_Group67_HighcourtBarAssociation.SignUpPageViewController">

    <!-- Login Section -->
    <Label layoutX="50.0" layoutY="30.0" style="-fx-font-size: 18px;" />

    <Label layoutX="114.0" layoutY="96.0" text="User ID:" />
    <TextField fx:id="signupUserIDField" layoutX="310.0" layoutY="91.0" prefWidth="180.0" />

    <Label layoutX="114.0" layoutY="136.0" text="Password:" />
    <PasswordField fx:id="signupPasswordField" layoutX="310.0" layoutY="131.0" prefWidth="180.0" />

    <Label layoutX="112.0" layoutY="176.0" text="Full Name:" />
    <TextField fx:id="signupNameField" layoutX="310.0" layoutY="171.0" prefWidth="180.0" />

    <Label layoutX="117.0" layoutY="215.0" text="Phone:" />
    <TextField fx:id="signupPhoneField" layoutX="310.0" layoutY="215.0" prefWidth="180.0" />

    <Label layoutX="110.0" layoutY="265.0" text="Date of Birth:" />
    <DatePicker fx:id="signupDobPicker" layoutX="310.0" layoutY="260.0" prefWidth="180.0" />



    <Button fx:id="signupButton" layoutX="255.0" layoutY="433.0" onAction="#signupOnAction" prefHeight="31.0" prefWidth="88.0" text="Sign Up">
      <font>
         <Font name="System Bold Italic" size="14.0" />
      </font></Button>
    <Button fx:id="backToLoginButton" layoutX="415.0" layoutY="431.0" onAction="#backToLoginOnAction" text="Back to Login">
      <font>
         <Font name="System Bold Italic" size="15.0" />
      </font></Button>
   <Label layoutX="291.0" layoutY="36.0" prefHeight="42.0" prefWidth="219.0" text="Sign Up for a New Account">
      <font>
         <Font name="System Bold" size="17.0" />
      </font>
   </Label>
   <Label layoutX="116.0" layoutY="320.0" text="Select Role:" />
   <ComboBox fx:id="selectrolecomboBox" layoutX="310.0" layoutY="315.0" prefHeight="31.0" prefWidth="180.0" />

</AnchorPane>
